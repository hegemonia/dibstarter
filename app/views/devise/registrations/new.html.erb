<div class="container">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin", :role=>"form"}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :placeholder => "Email address", :class => "form-control" %>
 
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control", autocomplete: "off" %>

    <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control", autocomplete: "off" %>
   
    <%= f.submit "Sign up", :class => "btn btn-large btn-primary btn-block" %>
  <br/>
  <%= render "devise/shared/links" %>
  <% end %>
</div>
