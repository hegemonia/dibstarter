

<%= form_tag(product_dibs_path, method: "post") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:billing_detail_name) %>
  <%= label_tag(:address1, "Address Line 1:") %>
  <%= text_field_tag(:billing_detail_address1) %>
  <%= label_tag(:city, "City:") %>
  <%= text_field_tag(:billing_detail_city) %>
  <%= label_tag(:state, "State:") %>
  <%= text_field_tag(:billing_detail_state) %>
  <%= label_tag(:zip, "Zip:") %>
  <%= text_field_tag(:billing_detail_zip) %>
  <%= label_tag(:size, "Size:") %>
  <%= select_tag(:size, options_for_select(@sizes)) %>

  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= STRIPE_PUBLISHABLE_KEY %>"
    data-image="/square-image.png"
    data-name="dibstarter"
    data-description="<%= @product.description %>"
    data-amount="<%= @product.price_in_cents %>"
    data-email="<%= @user.email %>">
  </script>
<% end %>
